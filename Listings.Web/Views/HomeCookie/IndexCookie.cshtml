@using Listings.Data;
@model ListingsViewModel
<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                @foreach (Listing l in Model.Listings)
                {
                    <div class="jumbotron">
                        <h5>Listed by @l.Name</h5>
                        <h5>Listed on @l.DateCreated</h5>
                        <h5>Phone Number: @l.Phone</h5>
                        <h3>Details:</h3>
                        <p>@l.Text</p>
                        @if (Model.Ids.Contains(l.Id))
                        {
                            <form method="post" action="/home/deletead">
                                <input type="hidden" name="id" value="@l.Id" />
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </main>
</div>